<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
    <h1>Give Your Comments Here!</h1>

    <%= form_for [@product, @review] do |f| %>
      <ul>
        <li>
          <%= f.text_field :description %><br>
          <p>Rating</p>
          <%= select_tag "rating", raw("<option>1</option><option>2</option><option>3</option><option>4</option><option>5</option>")%>
          <%= f.submit "Submit" %>
        </li>
      </ul>
    <% end %>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
        <% @product.reviews.each do |review| %>
          <%= render 'review', review: review %>
        <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>
